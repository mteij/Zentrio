{
  "name": "zentrio",
  "version": "1.1.15",
  "license": "MIT",
  "description": "Zentrio - Profile Management for Stremio",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "node scripts/build.js",
    "build:web": "node build.js",
    "build:server": "bun build src/index.ts --outdir ./dist --target bun --minify",
    "preview": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "cap:build": "bun run build && bunx cap build",
    "cap:sync": "bunx cap sync",
    "cap:open:android": "bunx cap open android",
    "cap:open:ios": "bunx cap open ios",
    "cap:run:android": "bunx cap run android",
    "cap:run:ios": "bunx cap run ios",
    "cap:serve": "bun run build && bunx cap serve"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@hono/node-server": "^1.19.6",
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.3.34",
    "hono": "^4.10.4",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "cpx": "^1.5.0",
    "typescript": "^5.9.3"
  }
}
