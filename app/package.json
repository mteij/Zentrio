{
  "name": "zentrio",
  "version": "2.0.0-alpha.4",
  "license": "MIT",
  "description": "Zentrio - Stream Your Way",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "node scripts/build.js",
    "build:web": "node scripts/build.js",
    "build:server": "bun build src/index.ts --outdir ./dist --target bun --minify",
    "preview": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "cap:build": "bun run build && bunx cap build",
    "cap:sync": "bunx cap sync",
    "cap:open:android": "bunx cap open android",
    "cap:open:ios": "bunx cap open ios",
    "cap:run:android": "bunx cap run android",
    "cap:run:ios": "bunx cap run ios",
    "cap:serve": "bun run build && bunx cap serve"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.4",
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@hono/node-server": "^1.19.6",
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.3.34",
    "boring-avatars": "^2.0.4",
    "hono": "^4.10.4",
    "lucide": "^0.554.0",
    "lucide-react": "^0.554.0",
    "lz-string": "^1.5.0",
    "nodemailer": "^7.0.10",
    "transliteration": "^2.3.5",
    "url-exists": "^1.0.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@iconify-json/material-symbols": "^1.2.46",
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "@types/react-dom": "^19.2.3",
    "cpx": "^1.5.0",
    "tar": "^7.4.3",
    "typescript": "^5.9.3"
  }
}
