# =============================================================================
# Zentrio Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# All variables have sensible defaults for development

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=./data/zentrio.db

# =============================================================================
# Authentication & Security
# =============================================================================
# IMPORTANT: Change these in production!
AUTH_SECRET=your-super-secret-auth-key-change-this-in-production
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this-in-production

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
# Server URL (where the backend API is hosted)
APP_URL=http://localhost:3000
# Client URL (where the frontend is hosted, used for CORS and redirects)
# For development with Vite, this is typically http://localhost:5173
CLIENT_URL=http://localhost:5173

# =============================================================================
# Email Configuration
# =============================================================================
# Option 1: Use individual settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@zentrio.app

# Option 2: Use a single SMTP URL (takes precedence over individual settings)
# SMTP_URL=smtp://user:pass@smtp.example.com:587

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_LIMIT=100         # max requests per window per IP

# =============================================================================
# Logging
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Controls the request/proxy logger middleware that prints "-->" and "<--" lines
PROXY_LOGS=true
# Controls verbose logs for the /stremio route
STREMIO_LOGS=false

# =============================================================================
# External APIs (Optional)
# =============================================================================
# TMDB API Key - for better trending data and metadata
TMDB_API_KEY=
# IMDB Ratings Update Interval (in hours)
IMDB_UPDATE_INTERVAL_HOURS=24
# Fanart.tv API Key - for enhanced logo fetching
FANART_API_KEY=

# =============================================================================
# Resend Email Provider (Alternative to SMTP)
# =============================================================================
# If SMTP is not configured, Resend will be used as a fallback
# Get your API key at https://resend.com
RESEND_API_KEY=

# =============================================================================
# SSO Providers (Optional)
# =============================================================================
# Uncomment and configure the providers you want to enable

# --- Google OAuth ---
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# --- GitHub OAuth ---
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# --- Discord OAuth ---
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# --- OpenID Connect (Custom OIDC Provider) ---
# OIDC_CLIENT_ID=
# OIDC_CLIENT_SECRET=
# OIDC_ISSUER=https://your-oidc-provider.com
# OIDC_DISPLAY_NAME=OpenID

# =============================================================================
# Trakt Integration (Optional)
# =============================================================================
# Enable Trakt.tv integration for watch history sync and recommendations
# Create an API app at https://trakt.tv/oauth/applications
# Set redirect URIs to: {APP_URL}/api/trakt/callback and zentrio://trakt/callback
# TRAKT_CLIENT_ID=
# TRAKT_CLIENT_SECRET=
