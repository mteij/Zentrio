# Database Configuration
DATABASE_URL=./data/zentrio.db

# Authentication
AUTH_SECRET=your-super-secret-auth-key-change-this-in-production
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=production
APP_URL=http://localhost:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@zentrio.app

# Rate limiting (milliseconds window and max requests)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_LIMIT=100         # max requests per window per IP

# Logging
# Controls the request/proxy logger middleware that prints "-->" and "<--" lines
# Backwards-compat: PROXY_LOGS also respects REQUEST_LOGS if set
PROXY_LOGS=true
# Controls verbose logs for the /stremio route ("[Zentrio][stremio route] incoming ...")
# Defaults to false if not set
STREMIO_LOGS=false
