{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/proxy",
        "function": "proxy"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}