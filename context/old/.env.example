# ----------------------------------------
#         CORE APPLICATION SETTINGS
# ----------------------------------------
# Application Domain - The public URL of your Zentrio instance.
# Used for generating links in emails and other parts of the application.
# Example: "https://zentrio.yourdomain.com" or "http://localhost:8000"
APP_DOMAIN="http://localhost:8000"

# ----------------------------------------
#         DATABASE CONFIGURATION
# ----------------------------------------
# MongoDB Connection URI
# Your full MongoDB connection string.
MONGO_URI="mongodb+srv://<user>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"

# ----------------------------------------
#         SECURITY SETTINGS
# ----------------------------------------
# Encryption Master Key - A 64-character hex key for encrypting sensitive data.
# CRITICAL: Keep this secret and back it up. Loss of this key means data loss.
# Generate with: python3 -c "import uuid; print((uuid.uuid4().hex + uuid.uuid4().hex))"
ENCRYPTION_MASTER_KEY="your_64_character_hex_master_key_here"

# ----------------------------------------
#         EMAIL CONFIGURATION
# ----------------------------------------
# General Email Settings
EMAIL_PROVIDER="resend" # "resend" or "smtp"
EMAIL_FROM_DOMAIN="noreply@yourdomain.com"

# Resend Configuration (if EMAIL_PROVIDER is "resend" or SMTP_FALLBACK_ENABLED is "true")
RESEND_API_KEY="re_xxxxxxxx_xxxxxxxx"

# SMTP Configuration (if EMAIL_PROVIDER is "smtp")
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"
SMTP_SECURE="false" # "true" for SSL/TLS (port 465), "false" for STARTTLS (port 587)

# SMTP Fallback
# If enabled, Resend will be used as a fallback if the primary SMTP provider fails.
SMTP_FALLBACK_ENABLED="false"
